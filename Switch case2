import java.util.*;
public class Prog_sw2 {
	
	void fn(int a,int b,int choice)
	{
		 
		switch(choice)
		{
		case 1:  System.out.println("the result of additon is="+(a+b));
		        break;
		case 2: System.out.println("the result of Substraction is ="+(a-b));
                break;
		case 3: System.out.println("the result of multiplication is="+(a*b));
                break;
		case 4: System.out.println("the result of division is="+(a/b));
                break;
		default: System.out.println("invalid option");
                 break;
		}
		 
	}
	

	public static void main(String[] args) {
		
		Prog_sw2 p=new Prog_sw2();
		Scanner g=new Scanner(System.in);
		System.out.println("enter first number");
		int a=g.nextInt();
		System.out.println("enter sec number");
		int b=g.nextInt();
		
		System.out.println("1.addition");
		System.out.println("2.Substraction");
		System.out.println("3.multiplication");
		System.out.println("4.division");
		
		System.out.println("please enter the choice");
		int choice=g.nextInt();
		p.fn(a,b,choice);

	}

}
